{
  "mass_training_system": {
    "version": "2.0",
    "description": "Mass Training System Configuration for AI3.0",
    
    "training_modes": {
      "quick": {
        "description": "Fast training với limited models",
        "max_parallel_jobs": 4,
        "max_neural_parallel": 2,
        "max_traditional_parallel": 2,
        "neural_epochs": 30,
        "neural_patience": 8,
        "expected_time_minutes": 10,
        "model_count": 15
      },
      
      "full": {
        "description": "Complete training tất cả models",
        "max_parallel_jobs": 8,
        "max_neural_parallel": 2,
        "max_traditional_parallel": 6,
        "neural_epochs": 100,
        "neural_patience": 15,
        "expected_time_minutes": 60,
        "model_count": 50
      },
      
      "production": {
        "description": "Production-ready training",
        "max_parallel_jobs": 12,
        "max_neural_parallel": 3,
        "max_traditional_parallel": 8,
        "neural_epochs": 150,
        "neural_patience": 20,
        "expected_time_minutes": 120,
        "model_count": 100
      }
    },
    
    "neural_architectures": [
      {
        "name": "dense_small",
        "layers": [64, 32],
        "dropout": [0.2],
        "resource_weight": 1.0,
        "expected_time": 5.0
      },
      {
        "name": "dense_medium", 
        "layers": [128, 64, 32],
        "dropout": [0.3, 0.2],
        "resource_weight": 1.5,
        "expected_time": 8.0
      },
      {
        "name": "dense_large",
        "layers": [256, 128, 64, 32],
        "dropout": [0.3, 0.2, 0.1],
        "resource_weight": 2.0,
        "expected_time": 12.0
      },
      {
        "name": "cnn_1d",
        "conv_layers": [64, 64, 32],
        "dense_layers": [50],
        "resource_weight": 2.5,
        "expected_time": 15.0
      },
      {
        "name": "lstm",
        "lstm_units": [128, 64],
        "dense_layers": [32],
        "resource_weight": 3.0,
        "expected_time": 20.0
      },
      {
        "name": "gru",
        "gru_units": [128, 64],
        "dense_layers": [32],
        "resource_weight": 2.5,
        "expected_time": 18.0
      },
      {
        "name": "hybrid_cnn_lstm",
        "conv_layers": [32],
        "lstm_units": [64, 32],
        "dense_layers": [64],
        "resource_weight": 4.0,
        "expected_time": 25.0
      },
      {
        "name": "transformer",
        "attention_heads": 4,
        "attention_dim": 32,
        "feed_forward_dim": 128,
        "resource_weight": 4.5,
        "expected_time": 30.0
      }
    ],
    
    "traditional_models": [
      {
        "name": "random_forest",
        "variants": [
          {"n_estimators": 100, "max_depth": null},
          {"n_estimators": 200, "max_depth": 10},
          {"n_estimators": 300, "max_depth": 15}
        ]
      },
      {
        "name": "gradient_boosting",
        "variants": [
          {"n_estimators": 100, "learning_rate": 0.1, "max_depth": 3},
          {"n_estimators": 200, "learning_rate": 0.05, "max_depth": 5}
        ]
      },
      {
        "name": "mlp_sklearn",
        "variants": [
          {"hidden_layer_sizes": [100], "max_iter": 1000},
          {"hidden_layer_sizes": [100, 50], "max_iter": 1000},
          {"hidden_layer_sizes": [200, 100, 50], "max_iter": 1000}
        ]
      },
      {
        "name": "svm",
        "variants": [
          {"kernel": "rbf", "C": 1.0},
          {"kernel": "linear", "C": 1.0},
          {"kernel": "poly", "C": 1.0, "degree": 3}
        ]
      },
      {
        "name": "decision_tree",
        "variants": [
          {"max_depth": 5},
          {"max_depth": 10},
          {"max_depth": null}
        ]
      },
      {
        "name": "naive_bayes",
        "variants": [{}]
      },
      {
        "name": "logistic_regression",
        "variants": [
          {"C": 0.1, "max_iter": 1000},
          {"C": 1.0, "max_iter": 1000},
          {"C": 10.0, "max_iter": 1000}
        ]
      }
    ],
    
    "advanced_models": {
      "lightgbm": {
        "enabled": true,
        "variants": [
          {"n_estimators": 100, "learning_rate": 0.1, "max_depth": -1},
          {"n_estimators": 200, "learning_rate": 0.05, "max_depth": 10}
        ]
      },
      "xgboost": {
        "enabled": true,
        "variants": [
          {"n_estimators": 100, "learning_rate": 0.1, "max_depth": 6},
          {"n_estimators": 200, "learning_rate": 0.05, "max_depth": 8}
        ]
      },
      "catboost": {
        "enabled": true,
        "variants": [
          {"iterations": 100, "learning_rate": 0.1, "depth": 6},
          {"iterations": 200, "learning_rate": 0.05, "depth": 8}
        ]
      }
    },
    
    "data_preprocessing": {
      "validation_split": 0.2,
      "test_split": 0.1,
      "scaling_methods": ["standard", "minmax", "robust"],
      "feature_selection": {
        "enabled": true,
        "methods": ["variance_threshold", "mutual_info", "correlation"]
      }
    },
    
    "resource_management": {
      "max_memory_gb": 16.0,
      "gpu_memory_limit_gb": 8.0,
      "auto_scaling": true,
      "priority_queue": true,
      "checkpoint_interval": 600
    },
    
    "monitoring": {
      "real_time_metrics": true,
      "progress_reporting": true,
      "resource_monitoring": true,
      "error_tracking": true,
      "performance_logging": true
    },
    
    "output_settings": {
      "models_directory": "trained_models/mass_training",
      "results_directory": "training_results/mass_training", 
      "backup_directory": "model_backups/mass_training",
      "auto_backup": true,
      "compress_models": false
    },
    
    "ensemble_settings": {
      "auto_ensemble_creation": true,
      "max_ensemble_size": 10,
      "ensemble_methods": ["voting", "stacking", "blending"],
      "performance_threshold": 0.6
    },
    
    "evaluation_metrics": [
      "accuracy",
      "precision", 
      "recall",
      "f1_score",
      "roc_auc",
      "confusion_matrix",
      "cross_validation_score"
    ]
  }
} 